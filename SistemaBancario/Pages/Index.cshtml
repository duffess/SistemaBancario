@page
@model SistemaBancario.Pages.IndexModel
@{
    ViewData["Title"] = "Sistema Bancário";
}

<div class="container text-center">
    <h1 class="display-4">Bem-vindo ao Sistema Bancário</h1>
    <p>Gerencie suas contas, visualize saldos e realize transações de forma segura.</p>
    <h3>Contas Cadastradas</h3>
    @if (Model.Contas.Any())
    {
        <ul class="list-group">
            @foreach (var conta in Model.Contas)
            {
                <li class="list-group-item">
                    <strong>@conta.Titular</strong> - Saldo: @conta.Saldo:C
                    <a class="btn btn-sm btn-primary" asp-page="/Contas/Detalhes" asp-route-id="@conta.Id">Detalhes</a>
                </li>
            }
        </ul>
    }
    else
    {
        <p>Nenhuma conta cadastrada.</p>
    }
    <div class="mt-3">
        <a class="btn btn-success" asp-page="/Contas/Criar">Criar Nova Conta</a>
    </div>
</div>